<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/back_image"
    tools:context="com.example.abhishek.emuseumguide.Login">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="REGISTRATION FORM"
        android:id="@+id/textView4"
        android:layout_gravity="center"
        android:layout_marginTop="15dp"
        android:textColor="#059080"
        android:textStyle="bold|italic"
        android:textSize="30sp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingLeft="150dp"
            android:paddingRight="150dp"
            android:gravity="center">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/etname"
                android:hint="Name"
                android:textColorHint="@color/colorWhite"
                android:textColor="@color/colorWhite" />

            <EditText
                android:layout_margin="2dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/etgender"
                android:textColorHint="@color/colorWhite"
                android:textColor="@color/colorWhite"
                android:hint="Sex ( M / F )" />

            <EditText
                android:layout_margin="2dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/etcountry"
                android:textColorHint="@color/colorWhite"
                android:textColor="@color/colorWhite"
                android:hint="Country" />

            <EditText
                android:layout_margin="2dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/etage"
                android:textColorHint="@color/colorWhite"
                android:textColor="@color/colorWhite"
                android:hint="Age" />

            <EditText
                android:layout_margin="5dp"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/etstate"
                android:hint="State"
                android:textColorHint="@color/colorWhite"
                android:textColor="@color/colorWhite"/>

            <EditText
                android:layout_margin="2dp"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/etemail"
                android:hint="Email(ex- xyz@gmail.com)"
                android:textColorHint="@color/colorWhite"
                android:textColor="@color/colorWhite"/>

            <EditText
                android:layout_margin="2dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/etmobile"
                android:hint="Mobile No. 10 digits"
                android:textColorHint="@color/colorWhite"
                android:textColor="@color/colorWhite"/>

            <EditText
                android:layout_margin="2dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/etpass"
                android:hint="Password"
                android:textColorHint="@color/colorWhite"
                android:textColor="@color/colorWhite"/>

            <Button
                android:layout_margin="2dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Register"
                android:id="@+id/btreg"
                android:onClick="onClick"
                android:textColor="#0a16f8" />

            <TextView
                android:layout_margin="5dp"
                android:textAlignment="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Register Here..!"
                android:id="@+id/ttlogin"
                android:textColor="@color/colorWhite"/>


        </LinearLayout>

    </ScrollView>

</LinearLayout>
